{
  "name": "billing-management-system",
  "productName": "Billing & Account Management",
  "version": "1.0.0",
  "description": "A comprehensive billing and account management desktop application for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir",
    "dist": "electron-builder",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html}\""
  },
  "keywords": [
    "billing",
    "accounting",
    "invoice",
    "desktop-app"
  ],
  "author": "Billing Management Team",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.billingmanagement.app",
    "productName": "Billing & Account Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "app.js",
      "utils.js",
      "constants.js",
      "keyboard-shortcuts.js",
      "styles.css",
      "icon.png",
      "icon.ico"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "license": "LICENSE.txt"
    }
  }
}
